<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="192dp"
        android:layout_height="177dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="113dp"
        app:srcCompat="@mipmap/speak" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-96dp"
        android:fontFamily="@fonts/Montserrat"
        android:layout_marginBottom="214dp"
        android:text="Learing Pronunciation"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="103dp"
        android:paddingLeft="35dp"
        android:paddingTop="15dp"
        android:textColor="#eeee"
        android:paddingRight="35dp"
        android:paddingBottom="35dp"
        android:text="Learn how to pronounce every alphabet and digit and test your skills by verbally speaking the same."
        android:textAlignment="center"
        android:textSize="16dp" />

</RelativeLayout>