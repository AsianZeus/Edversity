<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnColors">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp7"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>


    <LinearLayout
        android:id="@+id/linerlayo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp7"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="Slide for Next Character"
            android:textSize="18sp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/moved"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="0dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="move.json"
            app:lottie_loop="true" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonTestc"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:elevation="4dp"
        android:layout_margin="15dp"
        android:textAllCaps="false"
        android:background="@drawable/buttonshape"
        android:text="Test" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginStart="0dp"
        app:lottie_autoPlay="true"
        android:layout_alignParentBottom="true"
        app:lottie_fileName="goodswipe.json"
        app:lottie_loop="true" />

</RelativeLayout>