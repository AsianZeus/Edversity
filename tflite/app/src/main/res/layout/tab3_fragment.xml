<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/identicaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match the Identicals"
        android:textAlignment="center"
        android:textSize="25dp"/>
    <LinearLayout
        android:id="@+id/linearholder2"
        android:layout_below="@+id/identicaltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="50dp">
            <TextView
                android:id="@+id/col2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Column A"
                android:textAllCaps="true"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/iid1"
                android:layout_below="@+id/col2A"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/iid2"
                android:layout_below="@+id/iid1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/iid3"
                android:layout_below="@id/iid2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/iid4"
                android:layout_below="@id/iid3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">
            <TextView
                android:id="@+id/col2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Column B"
                android:textAllCaps="true"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/iid5"
                android:layout_below="@+id/col2B"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/iid6"
                android:layout_below="@+id/iid5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/iid7"
                android:layout_below="@id/iid6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/iid8"
                android:layout_below="@id/iid7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/imatchscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearholder2"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long press the Object of column A and drag it to matching Object of column B."
        android:layout_alignParentBottom="true"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="150dp"/>
    <Button
        android:id="@+id/idenbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tab3happy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:lottie_fileName="happy.json"
        app:lottie_loop="false" />
</RelativeLayout>