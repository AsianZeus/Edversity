<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/alphatext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Match the Alphabet"
        android:textAlignment="center"
        android:textSize="25dp"/>
    <LinearLayout
        android:id="@+id/linearholder1"
        android:layout_below="@+id/alphatext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="50dp">
            <TextView
                android:id="@+id/col1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Column A"
                android:textAllCaps="true"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/aid1"
                android:layout_below="@+id/col1A"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/aid2"
                android:layout_below="@+id/aid1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/aid3"
                android:layout_below="@id/aid2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/aid4"
                android:layout_below="@id/aid3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="50dp">
            <TextView
                android:id="@+id/col2B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Column B"
                android:textAllCaps="true"
                android:textSize="18dp"/>
            <ImageView
                android:id="@+id/aid5"
                android:layout_below="@+id/col2B"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/aid6"
                android:layout_below="@+id/aid5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/aid7"
                android:layout_below="@id/aid6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/aid8"
                android:layout_below="@id/aid7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/shape"
                android:layout_margin="10dp"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/amatchscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/linearholder1"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long press the Letter of column A and drag it to matching Letter of column B."
        android:layout_alignParentBottom="true"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="150dp"/>
    <Button
        android:id="@+id/alphbuton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/tab2happy"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:lottie_fileName="happy.json"
        app:lottie_loop="false" />
</RelativeLayout>